<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ComboLifestyle35" parent="Theme.AppCompat.DayNight.NoActionBar"/>
    <!-- Base application theme. -->
    <style name="buttonStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">35dp</item>
        <item name="cornerSizeTopLeft">35dp</item>
        <item name="cornerSizeBottomLeft">35dp</item>
        <item name="cornerSizeBottomRight">35dp</item>
        <item name="android:textColor">@color/purple_dull_light</item>
        <item name="android:textSize">24sp</item>
        <item name="backgroundTint">@color/purple_dull</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="fontFamily">@font/pangram_cr</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:elevation">4dp</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:background">@drawable/c_button1</item>
    </style>

    <style name="buttonStyle2" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">35dp</item>
        <item name="android:textColor">@color/purple_mid</item>
        <item name="android:textSize">22sp</item>
        <item name="backgroundTint">@color/purple_light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="fontFamily">@font/pangram_cr</item>
        <item name="fontStyle">@font/pangram_cr</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:elevation">1dp</item>
        <item name="strokeColor">@color/purple_mid</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="iconOnly">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:minWidth">12dp</item>
        <item name="android:minHeight">12dp</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">250dp</item>
        <item name="backgroundTint">@color/dark_peach</item>


    </style>
    <!---->
    <style name="fillText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/purple_dark</item>
        <item name="colorOnSurface">@color/light_peach</item>
        <item name="colorError">@color/orange</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/mlato</item>
        <item name="android:fontFamily">@font/medlato</item>
        <item name="fontStyle">italic</item>

    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/mlato</item>
        <item name="android:fontFamily">@font/medlato</item>
        <item name="fontStyle">italic</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="tvProfileHardCode" >
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/mlato</item>
        <item name="fontFamily">@font/mlato</item>
        <item name="fontStyle">italic</item>'
        <item name="android:textColor">@color/purple_dark</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_margin">50dp</item>
    </style>

    <style name="headerStyle" >
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#FF7C52</item>
        <item name="fontFamily">@font/pangram_nsb</item>
    </style>

    <style name="actionButtonStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">32dip</item>
        <item name="android:padding">0dip</item>

    </style>
    <style name="tvStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/mlato</item>
        <item name="fontFamily">@font/reg_pangram</item>
        <item name="android:textColor">@color/purple_dark</item>
        <item name="android:textAlignment">center</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">35dp</item>
        <item name="cornerSizeTopLeft">35dp</item>
        <item name="cornerSizeBottomLeft">35dp</item>
        <item name="cornerSizeBottomRight">35dp</item>
    </style>

    <style name="cv_style" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/cv</item>
    </style>

    <style name="cv" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">52dp</item>
        <item name="cornerSizeTopLeft">52dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="dd_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/purple_mid</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColor">@color/purple_mid</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/purple_mid</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">35dp</item>
        <item name="cornerSizeTopLeft">35dp</item>
        <item name="cornerSizeBottomLeft">35dp</item>
        <item name="cornerSizeBottomRight">35dp</item>
        <item name="endIconTint">@color/purple_mid</item>
        <item name="startIconDrawable">@drawable/arrow_dd</item>
        <item name="startIconTint">@color/purple_light</item>
        <item name="boxBackgroundColor">@color/purple_light</item>
    </style>

    <style name="ti_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/purple_mid</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColor">@color/purple_mid</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">35dp</item>
        <item name="cornerSizeTopLeft">35dp</item>
        <item name="cornerSizeBottomLeft">35dp</item>
        <item name="cornerSizeBottomRight">35dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/purple_mid</item>
        <item name="startIconTint">@color/purple_mid</item>
        <item name="placeholderTextColor">@color/purple_mid</item>
        <item name="maxLines">1</item>
        <item name="boxBackgroundColor">@color/purple_light</item>
    </style>

    <style name="label_style" parent="">
        <item name="colorPrimary">@color/bright_orange</item>  //Activated color
        <item name="colorOnSurface">@color/bright_orange</item>    //Normal color
        <item name="colorError">@color/bright_orange</item>        //Error color
        <item name="hintTextColor">@color/purple_mid</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/pangram_cr</item>
        <item name="font">@font/pangram_cr</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox</item>
    </style>
</resources>